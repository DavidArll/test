# Macro to allow spec compatibility with RPM < 4.9 (no fileattrs)
%drupal7_find_provides_and_requires %{expand: \
%global _use_internal_dependency_generator 0
%global __find_provides %{_prefix}/lib/rpm/apigee-drupal.prov %{version}
%global __find_requires %{_prefix}/lib/rpm/apigee-drupal.req
}
