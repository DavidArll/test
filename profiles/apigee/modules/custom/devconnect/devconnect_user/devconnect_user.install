        'type' => 'int',
        'size' => 'tiny',
        'not null' => TRUE,
      )
    ),
    'primary key' => array('developer_id'),
    'foreign keys' => array(
      'users' => array(
        'table' => 'users',
        'columns' => array('uid' => 'uid')
      )
    )
  );

  $schema['dc_dev_attributes'] = array(
    'description' => 'Caches developer attributes',
    'fields' => array(
