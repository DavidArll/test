    'fields' => array(
      'developer_id' => array(
        'description' => 'Edge unique developer id',
        'type' => 'char',
        'length' => 16,
        'not null' => TRUE,
      ),
      'uid' => array(
        'description' => 'Drupal user id',
        'type' => 'int',
        'unsigned' => TRUE,
        'not null' => TRUE
      ),
      'status' => array(
