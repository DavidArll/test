<?php

if (!class_exists('MintTest')) {
  drupal_set_message(t('Devconnect Mint tests are not displayed because the devconnect_monetization_tests module is not enabled.'), 'warning', FALSE);
  return;
}

class OrganizationTestCase extends MintTest {

  /**
   * @var Apigee\Mint\Organization
   */
  private $org;

  public static function getInfo() {
    return array(
      'name' => t('Mint Organization'),
      'description' => t('Tests the ability of the devconnect_monetization module to handle Organizations.'),
      'group' => t('Devconnect Mint'),
    );
  }


  public function setUp() {
    parent::setUp();
    $this->org = new Apigee\Mint\Organization($this->config);
  }

  public function testOrg() {
    $my_org = $this->config->orgName;
    try {
      $list = $this->org->listOrganizationIdentifiers();
      $this->assert(count($list) > 0, 'Organization list is not empty');

      if (!in_array($my_org, $list)) {
        $this->fail("Organization '$my_org' is not in the organization list.");
        return;
      }
    }
    catch (Exception $e) {
      $this->fail($e->getCode() . ' ' . $e->getMessage());
    }

    try {
      $this->org->load($my_org);
      $this->assert($my_org == $this->org->getName(), 'Organization loaded correctly');
      //if (function_exists('drush_print')) {
      //  drush_print(print_r($this->org, TRUE));
      //}
    }
    catch (Exception $e) {
      $this->fail($e->getCode() . ' ' . $e->getMessage());
    }

    // TODO: Test org create, update and delete.
  }
}
